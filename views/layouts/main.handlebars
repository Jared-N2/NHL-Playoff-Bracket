  <link rel="stylesheet" href="/css/style.css">
  <title>2021 NHL Stanley Cup Bracket Builder</title>
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">BracketGuys</a>
    <button class="navbar-toggler"type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        {{#if logged_in}}
        <li class="nav-item">
            <a class="nav-link" href="/profile"><button type="button" class="btn btn-primary" >Profile</button></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/bracket"><button type="button" class="btn btn-primary">Bracket</button></a>
        </li>
        <li class="nav-item">  
            <a class="nav-link" href="/logout"><button type="button" class="btn btn-primary">Logout</button></a>
        </li>   
        {{else}}
        <li class="nav-item">
            <a href="/login"><button type="button" class="btn btn-primary">Login</button></a>
        </li>
        <li class="nav-item">
            <a href="/bracket"><button type="button" class="btn btn-primary">Bracket</button></a>
        </li>
        {{/if}}
        
      </ul>
    </div>
  </div>
</nav>

<body>
  <header class="hero">
    <div class="hero-wrap">
      <p class="intro" id="intro">NHL</p>
      <h1 id="headline">Stanley Cup</h1>
      <p class="year"><i class="fa fa-star"></i> 2021 <i class="fa fa-star"></i></p>
      <p>Forecheck, Backcheck, Paycheck</p>
    </div>
  </header>

<main>
    <div class="post">
      {{{body}}}
    </div>
  </main>

  <footer>

  </footer>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>